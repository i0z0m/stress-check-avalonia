<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:StressCheckAvalonia.ViewModels"
             x:Class="StressCheckAvalonia.Views.AggregateResults"
             x:DataType="local:EmployeeViewModel">

	<StackPanel Orientation="Vertical" HorizontalAlignment="Center">
		<TextBlock FontSize="30"
			   Text="{Binding LevelText}"
			   Foreground="{Binding LevelColor}"
			   HorizontalAlignment="Center" />
		<StackPanel x:Name="SectionPanel"
                HorizontalAlignment="Stretch">
		</StackPanel>
	</StackPanel>

</UserControl>
