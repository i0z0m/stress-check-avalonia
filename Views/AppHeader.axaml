<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:StressCheckAvalonia.ViewModels"
             x:Class="StressCheckAvalonia.Views.AppHeader"
             x:DataType="local:EmployeeViewModel"
             VerticalAlignment="Top"
             Height="50"
             HorizontalAlignment="Stretch">
	<StackPanel Orientation="Vertical" HorizontalAlignment="Left">
		<StackPanel Orientation="Horizontal" Margin="30,0,0,0">
			<TextBlock Text="社員ID：" Foreground="Black" FontSize="20"/>
			<TextBlock Text="{Binding ID}" Foreground="Black" FontSize="20"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal" Margin="50,0,0,0">
			<TextBlock Text="氏名：" Foreground="Black" FontSize="20"/>
			<TextBlock Text="{Binding Name}" Foreground="Black" FontSize="20"/>
		</StackPanel>
	</StackPanel>
</UserControl>