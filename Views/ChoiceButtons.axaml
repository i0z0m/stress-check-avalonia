<!-- ChoiceButtons.axaml -->
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:stress_check_avalonia"
             x:Class="stress_check_avalonia.ChoiceButtons"
             x:DataType="local:SectionViewModel">

    <StackPanel Orientation="Horizontal">
        <RadioButton GroupName="First Group"
                     Content="{Binding Choices[0]}"
					 Foreground="Black"
					 FontSize="16" />
        <RadioButton GroupName="First Group"
                     Content="{Binding Choices[1]}"
					 Foreground="Black"
					 FontSize="16"
			         Margin="30,0,0,0" />
        <RadioButton GroupName="First Group"
                     Content="{Binding Choices[2]}"
					 Foreground="Black"
					 FontSize="16"
					 Margin="30,0,0,0" />
        <RadioButton GroupName="First Group"
                     Content="{Binding Choices[3]}"
					 Foreground="Black"
					 FontSize="16"
					 Margin="30,0,0,0" />
    </StackPanel>
</UserControl>
