<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:StressCheckAvalonia.ViewModels"
             x:Class="StressCheckAvalonia.Views.ChoiceButtons"
             x:DataType="local:QuestionViewModel">

	<StackPanel Orientation="Horizontal"
				Background="{Binding Background}">
		<RadioButton x:Name="RadioButton1"
					 Content="{Binding Choices[0]}"
					 Foreground="Black"
					 FontSize="18"
					 Tag="1" />
		<RadioButton x:Name="RadioButton2"
					 Content="{Binding Choices[1]}"
					 Foreground="Black"
					 FontSize="18"
					 Margin="6,0,0,0"
					 Tag="2" />
		<RadioButton x:Name="RadioButton3"
					 Content="{Binding Choices[2]}"
					 Foreground="Black"
					 FontSize="18"
					 Margin="6,0,0,0"
					 Tag="3" />
		<RadioButton x:Name="RadioButton4"
					 Content="{Binding Choices[3]}"
					 Foreground="Black"
					 FontSize="18"
					 Margin="6,0,0,0"
					 Tag="4" />
	</StackPanel>
</UserControl>
