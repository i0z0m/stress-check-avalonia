<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:stress_check_avalonia"
             x:Class="stress_check_avalonia.Header"
             x:DataType="local:SectionViewModel"
             Height="96"
             Background="#89c548"
             VerticalAlignment="Top"
             HorizontalAlignment="Stretch">
	<Grid>
		<Image Source="/Assets/icon.png" Width="96" Height="96" Margin="72,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" />

		<StackPanel Orientation="Horizontal"
					Margin="180,28,0,0"
					VerticalAlignment="Top"
					HorizontalAlignment="Left">
			<TextBlock Text="STEP"
					   FontSize="36"
					   Foreground="White" />
			<TextBlock Text="{Binding CurrentSection.Step}"
					   FontSize="36"
					   Foreground="White" />
			<TextBlock Text="{Binding CurrentSection.Name}"
					   FontSize="36"
					   Margin="36,0,0,0"
					   Foreground="White" />
		</StackPanel>
	</Grid>

</UserControl>
