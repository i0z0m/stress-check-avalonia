<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StressCheckAvalonia"
        xmlns:desc="clr-namespace:StressCheckAvalonia"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="630"
        Width="1000" Height="630"
        x:Class="StressCheckAvalonia.MainWindow"
        Icon="/Assets/favicon.png"
        Title="StressCheckAvalonia">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0">
			<local:AppHeader />
			<local:AppTitle />
			<local:SectionDescription x:Name="SectionDescriptionControl" Description="Your description here" IsLastSection="True" />
			<StackPanel x:Name="QuestionsPanel">
			</StackPanel>
		</StackPanel>
		<ContentControl x:Name="ResultsContent" Grid.Row="0" />
		<DockPanel Grid.Row="1" LastChildFill="False">
			<local:BackButtons DockPanel.Dock="Left" Margin="50, 0, 0, 10" />
			<local:NextButton DockPanel.Dock="Right" Margin="0, 0, 50, 10" />
		</DockPanel>
	</Grid>
</Window>
